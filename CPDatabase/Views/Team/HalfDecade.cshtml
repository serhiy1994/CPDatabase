@model TeamsHalfDecadeViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["HalfDecadesForTeams"];
}

<h3 class="text-center">@Localizer["HalfDecadesForTeams"]</h3>
<div class="table-responsive-md">
    <table class="table table-sm table-striped table-hover table-bordered">
        <thead class="table-dark align-middle text-center">
            <tr>
                <th scope="col">Id</th>
                <th scope="col"><a asp-action="HalfDecade" asp-route-sortOrder="@Model.SortViewModel.NameSort">@Localizer["HalfDecade"]</a></th>
                <th scope="col"><a asp-action="HalfDecade" asp-route-sortOrder="@Model.SortViewModel.GiggiSort">@Localizer["Giggiriva"]</a></th>
                <th scope="col"><a asp-action="HalfDecade" asp-route-sortOrder="@Model.SortViewModel.JbouSort">@Localizer["Jbou41"]</a></th>
                <th scope="col"><a asp-action="HalfDecade" asp-route-sortOrder="@Model.SortViewModel.ValSort">@Localizer["Valambrosio"]</a></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var halfDecade in Model.HalfDecades)
            {
                <tr>
                    <td>@halfDecade.Id</td>
                    <td>@halfDecade.HalfDecadeName</td>
                    <td class="text-center">@if (halfDecade.Giggi) { @Localizer["Yes"] } else { @Localizer["No"] }</td>
                    <td class="text-center">@if (halfDecade.Jbou) { @Localizer["Yes"] } else { @Localizer["No"] }</td>
                    <td class="text-center">@if (halfDecade.Val) { @Localizer["Yes"] } else { @Localizer["No"] }</td>
                    <td><a href="~/HalfDecade/View/@halfDecade.Id">@Localizer["Look"]</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
@await Html.PartialAsync("_PaginationPartial", new ViewDataDictionary(new EmptyModelMetadataProvider(), new ModelStateDictionary()) { { "CurrentAction", ViewContext.RouteData.Values["action"] } })