@model TeamsLeagueViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["LeaguesForTeams"];
}

<h3 class="text-center">@Localizer["LeaguesForTeams"]</h3>
<div class="table-responsive-md">
    <table class="table table-sm table-striped table-hover table-bordered">
        <thead class="table-dark align-middle text-center">
            <tr>
                <th scope="col">Id</th>
                <th scope="col"><a asp-action="LeagueTeam" asp-route-sortOrder="@Model.SortViewModel.NameSort">@Localizer["LeagueTeam"]</a></th>
                <th scope="col"><a asp-action="LeagueTeam" asp-route-sortOrder="@Model.SortViewModel.HalfDecadeSort">@Localizer["HalfDecade"]</a></th>
                <th scope="col"><a asp-action="LeagueTeam" asp-route-sortOrder="@Model.SortViewModel.SeasonSort">@Localizer["Season"]</a></th>
                <th scope="col"><a asp-action="LeagueTeam" asp-route-sortOrder="@Model.SortViewModel.GiggiSort">@Localizer["Giggiriva"]</a></th>
                <th scope="col"><a asp-action="LeagueTeam" asp-route-sortOrder="@Model.SortViewModel.JbouSort">@Localizer["Jbou41"]</a></th>
                <th scope="col"><a asp-action="LeagueTeam" asp-route-sortOrder="@Model.SortViewModel.ValSort">@Localizer["Valambrosio"]</a></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var leagueTeam in Model.LeaguesT)
            {
                <tr>
                    <td>@leagueTeam.Id</td>
                    <td>@leagueTeam.Name</td>
                    <td>@leagueTeam.HalfDecade</td>
                    <td>@leagueTeam.Season</td>
                    <td class="text-center">@if (leagueTeam.Giggi) { @Localizer["Yes"] } else { @Localizer["No"] }</td>
                    <td class="text-center">@if (leagueTeam.Jbou) { @Localizer["Yes"] } else { @Localizer["No"] }</td>
                    <td class="text-center">@if (leagueTeam.Val) { @Localizer["Yes"] } else { @Localizer["No"] }</td>
                    <td><a href="~/LeagueTeam/View/@leagueTeam.Id">@Localizer["Look"]</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
@await Html.PartialAsync("_PaginationPartial", new ViewDataDictionary(new EmptyModelMetadataProvider(), new ModelStateDictionary()) { { "CurrentAction", ViewContext.RouteData.Values["action"] } })