@model CPDatabase.Models.NationalTeam
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["NationalTeam"] + ": " + @Model.NTName;
}

<h3>@Localizer["NationalTeam"]: @Model.NTName</h3>
<table class="table">
    <tr>
        <td>Id</td>
        <td>@Localizer["NationalTeam"]</td>
        <td>@Localizer["CountryNT"]Country</td>
        <td>@Localizer["LeagueNT"]League NT</td>
        <td>@Localizer["Year"]Year (if any)</td>
        <td>@Localizer["Period"]Period (if any)</td>
        <td>@Localizer["NotQual"]Not qualified</td>
        <td>@Localizer["Giggiriva"]Giggi</td>
        <td>@Localizer["Jbou"]Jbou</td>
        <td>@Localizer["Valambrosio"]Val</td>
    </tr>
    <tr>
        <td>@Model.Id</td>
        <td>@Model.NTName</td>
        <td>@Model.Country</td>
        <td>@Model.LeagueNT</td>
        <td>@Model.Year</td>
        <td>@Model.Period</td>
        <td>@Model.NotQual</td>
        <td>@Model.Giggi</td>
        <td>@Model.Jbou</td>
        <td>@Model.Val</td>
    </tr>
</table>
@if (Model.Val == true)
{
    <img src="@String.Concat("/images/val/", Model.NTName.Replace(" ", ""), ".png")" />
}
else
{
    <img src="@String.Concat("/images/", Model.NTName.Replace(" ", ""), ".png")" />
}