@model NTsAllViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["NationalTeams"];
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    $(function () {
        $('#selectY').change(function () {
            if ($('#selectY option:selected').index() > 1) {
                $('#selectP').val('All').prop('disabled', true);
            } else {
                $('#selectP').prop('disabled', false);
            }
        });

        $('#selectP').change(function () {
            if ($('#selectP option:selected').index() > 1) {
                $('#selectY').val('All').prop('disabled', true);
            } else {
                $('#selectY').prop('disabled', false);
            }
        });
    });
</script>

<h3 class="text-center">@Localizer["NationalTeams"]</h3>
<form method="get">
    <div class="form-group d-flex flex-row gap-2 align-middle">
        <label class="me-2">@Localizer["Year"]: </label>
        <select name="year" id="selectY" asp-items="Model.FilterViewModel.Years" class="form-control me-2"></select>
        <label class="me-2">@Localizer["Period"]: </label>
        <select name="period" id="selectP" asp-items="Model.FilterViewModel.Periods" class="form-control me-2"></select>
        <input type="submit" value="@Localizer["Filter"]" class="btn btn-outline-dark" />
    </div>
</form>
<div class="table-responsive-md">
    <table class="table table-sm table-striped table-hover table-bordered">
        <thead class="table-dark align-middle table-center">
            <tr>
                <th scope="col">Id</th>
                <th scope="col"><a asp-action="All" asp-route-sortOrder="@Model.SortViewModel.NameSort" asp-route-year="@Model.FilterViewModel.SelectedYear" asp-route-period="@Model.FilterViewModel.SelectedPeriod">@Localizer["NationalTeam"]</a></th>
                <th scope="col"><a asp-action="All" asp-route-sortOrder="@Model.SortViewModel.CountrySort" asp-route-year="@Model.FilterViewModel.SelectedYear" asp-route-period="@Model.FilterViewModel.SelectedPeriod">@Localizer["CountryNT"]</a></th>
                <th scope="col"><a asp-action="All" asp-route-sortOrder="@Model.SortViewModel.LeagueSort" asp-route-year="@Model.FilterViewModel.SelectedYear" asp-route-period="@Model.FilterViewModel.SelectedPeriod">@Localizer["LeagueNT"]</a></th>
                <th scope="col"><a asp-action="All" asp-route-sortOrder="@Model.SortViewModel.YearSort" asp-route-year="@Model.FilterViewModel.SelectedYear" asp-route-period="@Model.FilterViewModel.SelectedPeriod">@Localizer["Year"]</a></th>
                <th scope="col"><a asp-action="All" asp-route-sortOrder="@Model.SortViewModel.PeriodSort" asp-route-year="@Model.FilterViewModel.SelectedYear" asp-route-period="@Model.FilterViewModel.SelectedPeriod">@Localizer["Period"]</a></th>
                <th scope="col"><a asp-action="All" asp-route-sortOrder="@Model.SortViewModel.NotQualSort" asp-route-year="@Model.FilterViewModel.SelectedYear" asp-route-period="@Model.FilterViewModel.SelectedPeriod">@Localizer["NotQual"]</a></th>
                <th scope="col"><a asp-action="All" asp-route-sortOrder="@Model.SortViewModel.GiggiSort" asp-route-year="@Model.FilterViewModel.SelectedYear" asp-route-period="@Model.FilterViewModel.SelectedPeriod">@Localizer["Giggiriva"]</a></th>
                <th scope="col"><a asp-action="All" asp-route-sortOrder="@Model.SortViewModel.JbouSort" asp-route-year="@Model.FilterViewModel.SelectedYear" asp-route-period="@Model.FilterViewModel.SelectedPeriod">@Localizer["Jbou41"]</a></th>
                <th scope="col"><a asp-action="All" asp-route-sortOrder="@Model.SortViewModel.ValSort" asp-route-year="@Model.FilterViewModel.SelectedYear" asp-route-period="@Model.FilterViewModel.SelectedPeriod">@Localizer["Valambrosio"]</a></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var nationalTeam in Model.NTs)
            {
                <tr>
                    <td>@nationalTeam.Id</td>
                    <td>@nationalTeam.NTName</td>
                    <td>@nationalTeam.Country</td>
                    <td>@nationalTeam.LeagueNT</td>
                    <td>@nationalTeam.Year</td>
                    <td>@nationalTeam.Period</td>
                    <td>@nationalTeam.NotQual</td>
                    <td>@nationalTeam.Giggi</td>
                    <td>@nationalTeam.Jbou</td>
                    <td>@nationalTeam.Val</td>
                    <td><a href="~/NT/View/@nationalTeam.Id">@Localizer["Look"]</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
@await Html.PartialAsync("_PaginationPartial", new ViewDataDictionary(new EmptyModelMetadataProvider(), new ModelStateDictionary()) { { "CurrentAction", ViewContext.RouteData.Values["action"] } })