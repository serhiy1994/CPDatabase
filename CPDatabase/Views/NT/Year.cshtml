@model NTsYearViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["YearsForNationalTeams"];
}

<h3 class="text-center">@Localizer["YearsForNationalTeams"]</h3>
<div class="table-responsive-md">
    <table class="table table-sm table-striped table-hover table-bordered">
        <thead class="table-dark align-middle text-center">
            <tr>
                <th scope="col">Id</th>
                <th scope="col"><a asp-action="Year" asp-route-sortOrder="@Model.SortViewModel.NameSort">@Localizer["Year"]</a></th>
                <th scope="col"><a asp-action="Year" asp-route-sortOrder="@Model.SortViewModel.GiggiSort">@Localizer["Giggiriva"]</a></th>
                <th scope="col"><a asp-action="Year" asp-route-sortOrder="@Model.SortViewModel.JbouSort">@Localizer["Jbou41"]</a></th>
                <th scope="col"><a asp-action="Year" asp-route-sortOrder="@Model.SortViewModel.ValSort">@Localizer["Valambrosio"]</a></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var year in Model.Years)
            {
                <tr>
                    <td>@year.Id</td>
                    <td>@year.YearName</td>
                    <td class="text-center">@if (year.Giggi) { @Localizer["Yes"] } else { @Localizer["No"] }</td>
                    <td class="text-center">@if (year.Jbou) { @Localizer["Yes"] } else { @Localizer["No"] }</td>
                    <td class="text-center">@if (year.Val) { @Localizer["Yes"] } else { @Localizer["No"] }</td>
                    <td><a href="~/Year/View/@year.Id">@Localizer["Look"]</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
@await Html.PartialAsync("_PaginationPartial", new ViewDataDictionary(new EmptyModelMetadataProvider(), new ModelStateDictionary()) { { "CurrentAction", ViewContext.RouteData.Values["action"] } })